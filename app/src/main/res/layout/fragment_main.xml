<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="@drawable/back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_image"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main"
        android:foregroundGravity="fill"
        android:background="#f3060606" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="LOTHUKUNTA BRANCH"
        android:id="@+id/button2"
        android:layout_below="@+id/layout_image"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:background="#876997ad"
        android:onClick="OnClickLothukunta"/>



    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="BOLARAM BRANCH"
        android:id="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:background="#876997ad"
        android:onClick="OnClickBolaram"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="MAJEEDPUR BRANCH"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:textSize="12sp"
        android:background="#876997ad"
        android:onClick="OnClickMajeedpur"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="10th RESULTS"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:background="#876997ad"
        android:onClick="OnClickTenthResults" />

        <Button
            style="@style/button"
            android:id="@+id/button6"
            android:layout_below="@+id/button5"
            android:text = "ADMISSION"
            android:layout_marginTop="20dp"
            android:onClick="OnClickAdmissions"/>

        <Button
            style="@style/button"
            android:id="@+id/button7"
            android:layout_below="@+id/button6"
            android:text="ALUMINI CLUB"
            android:layout_marginTop="20dp"
            android:onClick="AluminiClub"/>

        <Button
            style="@style/button"
            android:id="@+id/button8"
            android:layout_below="@+id/button7"
            android:text="CONTACT US"
            android:layout_marginTop="20dp"
            android:onClick="ContactuS"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/mmhs_news_txt"
        android:layout_below="@+id/button8"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:gravity="center"
        android:hint="For School News Click On The Below Icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_below="@+id/mmhs_news_txt"
            android:src="@mipmap/news"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#f3060606"
            android:onClick="OnClickSchoolNewsButton"/>

    </RelativeLayout>

</ScrollView>
