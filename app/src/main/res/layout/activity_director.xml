<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shadrach.modelmissionhighschool.Director"
    style="@style/androidlayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Send News to all Branches"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/allbranch_director"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="Click here to enter the text" />

    <Button
        style="@style/button"
        android:id="@+id/director_send_news_txt"
        android:layout_below="@+id/allbranch_director"
        android:text="SEND DATA"
        android:layout_marginTop="5dp"
        android:onClick="OnClickDirectorSendNews"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Faculty Details"
            android:id="@+id/textView2"
            android:layout_below="@+id/director_send_news_txt"
            android:layout_marginTop="10dp"/>

        <Button
            style="@style/button"
            android:layout_below="@+id/textView2"
            android:id="@+id/director_loth"
            android:text="LOTHUKUNTA BRANCH"
            android:layout_marginTop="5dp"/>

        <Button
            style="@style/button"
            android:layout_below="@+id/director_loth"
            android:id="@+id/director_bolaram"
            android:text="BOLARAM BRANCH"
            android:layout_marginTop="5dp"/>

        <Button
            style="@style/button"
            android:layout_below="@+id/director_bolaram"
            android:id="@+id/director_majeedpur"
            android:text="MAJEEDPUR BRANCH"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>
</ScrollView>
