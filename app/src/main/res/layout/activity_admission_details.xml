<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shadrach.modelmissionhighschool.AdmissionDetails"
    style="@style/androidlayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Children seeking admission to class L.K.G should have completed 3 years of age. A corresponding age is fixed for the subsequent classes. Pupils who join the school in standard II and above should submit a Transfer Certificate from the previous school. If the school is outside the state of A.P. The Transfer Certificate should be countersigned by the Education Officer of the respective state.
The following are required to be submitted along with the application form:\n
• Original Birth Certficate together with a true copy.\n
• Transfer Certificate from the school last attended.\n
• Four copies of passport size photograph\n "
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DOWNLOAD FORMS"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <Button
            style="@style/button"
            android:id="@+id/lkg_button"
            android:text="LKG"
            android:layout_below="@+id/textView5"
            android:layout_marginBottom="5dp"
            android:onClick="OnClickLkg"/>
        <Button
            style="@style/button"
            android:id="@+id/ukg_button"
            android:text="UKG"
            android:layout_below="@+id/lkg_button"
            android:layout_marginBottom="5dp"
            android:onClick="OnClickUkg"/>
        <Button
            style="@style/button"
            android:id="@+id/high_school_button"
            android:text="High school"
            android:layout_below="@+id/ukg_button"
            android:onClick="OnClickHighSchool"/>
    </RelativeLayout>
</ScrollView>
